{
  "name": "Copy Page Title and URL Pro",
  "version": "1.0.0",
  "description": "Enhanced Chrome extension for copying page title, URL, and selected text with customizable templates and smart fallback.",
  "manifest_version": 3,
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "scripting",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.webp",
      "48": "icons/icon.webp",
      "128": "icons/icon.webp"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "copy-template-0": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Smart copy: Selected text or title + URL"
    },
    "copy-template-1": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Copy as Markdown link"
    },
    "copy-template-2": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Copy with smart quotes for selected text"
    }
  },
  "default_locale": "zh_CN",
  "icons": {
    "16": "icons/icon.webp",
    "48": "icons/icon.webp",
    "128": "icons/icon.webp"
  },
  "options_page": "options.html"
}