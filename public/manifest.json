{
  "name": "Copy Page Title and URL Pro",
  "version": "1.0.0",
  "description": "Enhanced Chrome extension for copying page title, URL, and selected text with customizable templates and smart fallback.",
  "manifest_version": 3,
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "scripting",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.webp",
      "48": "icons/icon.webp",
      "128": "icons/icon.webp"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "default_locale": "zh_CN",
  "icons": {
    "16": "icons/icon.webp",
    "48": "icons/icon.webp",
    "128": "icons/icon.webp"
  },
  "options_page": "options.html"
}